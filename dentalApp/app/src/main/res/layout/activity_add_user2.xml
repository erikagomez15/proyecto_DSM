<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addUser2"
    android:padding="20dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:transitionName="btnBack_transition"
            android:contentDescription="@string/descriptionBtnBackCA"
            tools:targetApi="lollipop"
            android:onClick="backAddUser1"/>

        <TextView
            android:id="@+id/txtvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleAU"
            android:textSize="40sp"
            android:fontFamily="@font/telex"
            android:textColor="@color/azul_base_app"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:transitionName="title_transition"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/someTextLogin"
                android:textSize="18sp"
                android:fontFamily="@font/telex"
                android:textAllCaps="true"
                android:text="@string/indicationsCA"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mailCA"
                app:boxStrokeColor="@color/azul_base_app"
                app:hintTextColor="@color/azul_base_app"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                android:textColorHint="@color/azul_base_app"
                app:endIconMode="clear_text"
                app:endIconTint="@color/azul_base_app"
                app:boxStrokeWidthFocused="2dp"
                android:fontFamily="@font/telex"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Usercorreo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/passwordAU"
                app:boxStrokeColor="@color/azul_base_app"
                app:hintTextColor="@color/azul_base_app"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_baseline_lock_open_24"
                android:textColorHint="@color/azul_base_app"
                app:passwordToggleTint="@color/someTextLogin"
                app:passwordToggleEnabled="true"
                app:endIconTint="@color/azul_base_app"
                app:boxStrokeWidthFocused="2dp"
                android:fontFamily="@font/telex"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Userpsswd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password2AU"
                app:boxStrokeColor="@color/azul_base_app"
                app:hintTextColor="@color/azul_base_app"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_baseline_lock_open_24"
                android:textColorHint="@color/azul_base_app"
                app:passwordToggleEnabled="true"
                app:endIconTint="@color/azul_base_app"
                app:passwordToggleTint="@color/someTextLogin"
                app:boxStrokeWidthFocused="2dp"
                android:fontFamily="@font/telex"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Userpsswdc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/azul_base_app"
                android:elevation="5dp"
                android:fontFamily="@font/telex"
                android:onClick="nextAddUser3"
                android:text="@string/nextCA"
                android:textColor="@color/white"
                android:transitionName="btnNext_transition"
                app:cornerRadius="10dp"
                tools:targetApi="lollipop" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>