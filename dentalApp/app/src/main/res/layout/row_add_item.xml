<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@null"
        android:elevation="0dp"
        android:fontFamily="@font/telex"
        android:text="@string/updateSB"
        android:textColor="@color/someTextLogin"
        android:textSize="15sp"
        android:drawableEnd="@drawable/ic_baseline_system_update_alt_15"
        tools:targetApi="lollipop"
        android:drawableRight="@drawable/ic_baseline_system_update_alt_15"
        android:padding="20dp"/>

    <Button
        android:id="@+id/btnDelete"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@null"
        android:elevation="0dp"
        android:fontFamily="@font/telex"
        android:text="@string/deleteSB"
        android:textColor="@color/someTextLogin"
        android:textSize="15sp"
        android:drawableEnd="@drawable/ic_baseline_delete_15"
        tools:targetApi="lollipop"
        android:drawableRight="@drawable/ic_baseline_delete_15"
        android:padding="20dp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>